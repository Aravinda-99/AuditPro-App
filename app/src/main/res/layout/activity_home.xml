<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    tools:context=".Home">

    <ImageView
        android:id="@+id/Streipe1Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="608dp"
        android:rotation="64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stripe4" />

    <ImageView
        android:id="@+id/Stripe2Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginBottom="680dp"
        android:rotation="64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stripe3" />

    <ImageView
        android:id="@+id/Stripe2Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="176dp"
        android:rotation="64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stripe4" />

    <ImageView
        android:id="@+id/Stripe1Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="672dp"
        android:layout_marginEnd="204dp"
        android:rotation="64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stripe3" />

    <Button
        android:id="@+id/Deadline"
        android:layout_width="307dp"
        android:layout_height="124dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="#4079B1"
        android:cursorVisible="true"
        android:gravity="top|left"
        android:onClick="onButtonClick"
        android:text="Time Spent"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorLink="#FEFEFE"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:cornerRadius="22dp"
        app:iconGravity="textTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Documents"
        android:layout_width="307dp"
        android:layout_height="124dp"
        android:layout_marginTop="344dp"
        android:backgroundTint="#4079B1"
        android:cursorVisible="true"
        android:gravity="top|left"
        android:text="Tasks"
        android:onClick="onButtonClick"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorLink="#FEFEFE"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:cornerRadius="22dp"
        app:iconGravity="textTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Standards"
        android:layout_width="307dp"
        android:layout_height="124dp"
        android:layout_marginTop="508dp"
        android:backgroundTint="#4079B1"
        android:cursorVisible="true"
        android:gravity="top|left"
        android:text="Standards"
        android:onClick="onButtonClick"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorLink="#FEFEFE"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:cornerRadius="22dp"
        app:iconGravity="textTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView99"
        android:layout_width="199dp"
        android:layout_height="80dp"
        android:layout_marginTop="68dp"
        android:text="@string/home"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:text="Keep track of the time spent on your current audit"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/Deadline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Deadline"
        app:layout_constraintVertical_bias="0.671" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:text="Have the latest tasks at hand, including work to do as well as documetbs to collect"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/Documents"
        app:layout_constraintEnd_toEndOf="@+id/Documents"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/Documents"
        app:layout_constraintTop_toTopOf="@+id/Documents"
        app:layout_constraintVertical_bias="0.71" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:text="Be upto date with the latest available standards on auditing and accouting"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/Standards"
        app:layout_constraintEnd_toEndOf="@+id/Standards"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="@+id/Standards"
        app:layout_constraintTop_toTopOf="@+id/Standards"
        app:layout_constraintVertical_bias="0.631" />

</androidx.constraintlayout.widget.ConstraintLayout>